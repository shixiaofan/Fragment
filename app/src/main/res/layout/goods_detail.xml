<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comr.example.administrator.fragmentdemo.GoodsDetail">
    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/t2"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_iv"
        android:text="商品1"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/item_name"
        android:layout_toRightOf="@+id/item_iv"
        android:text="100元"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_iv_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cc"
            />
        <TextView
            android:id="@+id/item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/item_iv_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dd"
            />
        <Button
            android:id="@+id/item_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/item_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minLines="5"
        android:layout_below="@+id/item_iv"
        android:layout_above="@+id/item_ll"
        android:text="这是一件吊炸天的商品"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />

</RelativeLayout>
